<!-- Modal Overlay (Hidden by Default) -->
<div id="modalOverlay" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <!-- Modal Container -->
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-md w-full relative">
        <!-- Close Button -->
        <button id="closeModal" class="absolute top-2 right-2 text-gray-600 hover:text-gray-800">&times;</button>

        <div class="max-w-md w-full ">
            <h2 class="text-xl font-bold mb-4">
                <svg class="inline" width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
                    <path fill="currentColor" d="M3.015 8.844A1.628 1.628 0 0 1 4.625 7h23.75a1.63 1.63 0 0 1 1.612 1.844l-.002.009l-.36 2.354v.002a2.1 2.1 0 0 1-1.213 1.607l-2.124 16.188v.003C26.146 30.12 25.213 31 24.065 31H8.926c-1.15 0-2.082-.88-2.222-1.992v-.004l-.298-2.265c-1.351-.27-2.337-.941-2.833-2.066c-.565-1.278-.347-2.854.09-4.34c.34-1.15.854-2.384 1.428-3.611l-.512-3.908a2.1 2.1 0 0 1-1.213-1.607l-.35-2.35zM5.06 9l.285 1.913a.1.1 0 0 0 .1.087h22.11c.038 0 .083-.03.091-.086l.001-.005L27.94 9zm.562 11.766l-.04.133c-.412 1.4-.44 2.376-.18 2.966c.11.25.31.509.72.703zm2.819 6.11l.247 1.88c.02.166.148.244.238.244h15.14c.09 0 .217-.078.237-.244l.001-.006L26.371 13h-6.242a1 1 0 0 1 .739 1.462q-.406.758-.795 1.495c-1.525 2.881-2.9 5.482-4.538 7.385c-.979 1.138-2.082 2.07-3.413 2.691c-1.096.513-2.31.798-3.681.842M19.844 13H6.62l1.56 11.88c1.214-.013 2.221-.25 3.095-.658c1.011-.473 1.899-1.202 2.744-2.184c1.478-1.718 2.73-4.082 4.268-6.983q.394-.746.817-1.537a1 1 0 0 1 .74-.518" />
                </svg>
                Upload File to Bucket</h2>

            <!-- Bucket Info -->
            <p class="text-gray-700 mb-2"><strong>Bucket Name:</strong> <span class="bucketName" class="text-blue-500"></span>
            </p>

            <!-- File Upload Form -->
            <form id="uploadForm">
                <input type="file" id="fileInput" class="w-full p-2 border border-gray-300 rounded-md mb-4" required>

                <!-- Upload Button -->
                <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600">
                    Upload File
                </button>
            </form>

            <!-- Message Box -->
            <div id="messageBox" class="mt-4 p-2 text-center hidden"></div>
        </div>
    </div>
</div>


<div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-md mt-6">

    <div class="w-full p-6 ">
        <h2 class="text-2xl font-bold mb-4">
            <svg class="inline" width="25" height="25" viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg">
                <g fill="currentColor">
                    <path d="M208 72v112a8 8 0 0 1-8 8h-24v-88l-40-40H80V40a8 8 0 0 1 8-8h80Z" opacity=".2" />
                    <path d="m213.66 66.34l-40-40A8 8 0 0 0 168 24H88a16 16 0 0 0-16 16v16H56a16 16 0 0 0-16 16v144a16 16 0 0 0 16 16h112a16 16 0 0 0 16-16v-16h16a16 16 0 0 0 16-16V72a8 8 0 0 0-2.34-5.66M168 216H56V72h76.69L168 107.31zm32-32h-16v-80a8 8 0 0 0-2.34-5.66l-40-40A8 8 0 0 0 136 56H88V40h76.69L200 75.31Zm-56-32a8 8 0 0 1-8 8H88a8 8 0 0 1 0-16h48a8 8 0 0 1 8 8m0 32a8 8 0 0 1-8 8H88a8 8 0 0 1 0-16h48a8 8 0 0 1 8 8" />
                </g>
            </svg>
            Bucket Files
        </h2>

        <!-- Bucket Name Display -->
        <div class="text-lg text-gray-700 mb-4">
            <span>Bucket:</span> <span id="bucketName" class="font-semibold"></span>
        </div>

        <!-- Refresh Button -->
        <button id="refreshFiles" class="border border-indigo-600 mb-4 p-2 rounded-md">
            <svg class="inline" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M12 20q-3.35 0-5.675-2.325T4 12t2.325-5.675T12 4q1.725 0 3.3.712T18 6.75V4h2v7h-7V9h4.2q-.8-1.4-2.187-2.2T12 6Q9.5 6 7.75 7.75T6 12t1.75 4.25T12 18q1.925 0 3.475-1.1T17.65 14h2.1q-.7 2.65-2.85 4.325T12 20">
                </path>
            </svg>
            Refresh List
        </button>


        <!-- Create bucket  / Button to open modal  -->
        <button id="openModal" class="border border-indigo-600 px-4 py-2 rounded-md ">
            <svg class="inline" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path fill="currentColor" d="M19 12.998h-6v6h-2v-6H5v-2h6v-6h2v6h6z" /></svg>
            Upload file
        </button>


        <!-- File List Table -->
        <div class="overflow-x-auto">
            <table class="w-full border-collapse border border-gray-300">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="border border-gray-300 p-2">File Name</th>
                        <th class="border border-gray-300 p-2">Last Modified</th>
                        <th class="border border-gray-300 p-2">Size (Bytes)</th>
                        <th class="border border-gray-300 p-2">Action</th>
                    </tr>
                </thead>
                <tbody id="fileList">
                    <!-- Files will be inserted dynamically here -->
                </tbody>
            </table>
        </div>
    </div>

</div>